<Page
    x:Class="RetailMobile.Presentation.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RetailMobile.Presentation.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:Uno.Toolkit.UI"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <Color x:Key="ActiveColor">#F83758</Color>
            <Color x:Key="InactiveColor">#666666</Color>
            <SolidColorBrush x:Key="ActiveBrush" Color="{StaticResource ActiveColor}"/>
            <SolidColorBrush x:Key="InactiveBrush" Color="{StaticResource InactiveColor}"/>

            <Style x:Key="BottomBarItemStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Height" Value="60"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid toolkit:SafeArea.Insets="Top, Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- MAIN SCROLL -->
        <ScrollViewer Grid.Row="0">
            <Grid HorizontalAlignment="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Profile"
                           HorizontalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,0"/>

                <!-- ===== FORM SECTION ===== -->
                <StackPanel Grid.Row="1"
                            Margin="20,20,20,20"
                            Spacing="20">

                    <!-- Name Label -->
                    <TextBlock Text="Full Name"
                               FontSize="12"
                               Margin="0,0,0,-10"/>

                    <!-- Name Box -->
                    <TextBox Height="32"
                             Text="a"
                            Background="White"
                             Foreground="Black"
                            BorderThickness="1"
                            CornerRadius="8"
                            FontSize="12">
                    </TextBox>

                    <!-- Phone Label -->
                    <TextBlock Text="Phone Number"
                               FontSize="12"
                               Margin="0,0,0,-10"/>

                    <!-- Phone Box -->
                    <TextBox Height="32"
                             Text="a"
                            Background="White"
                             Foreground="Black"
                            BorderThickness="1"
                            CornerRadius="8"
                            FontSize="12">
                    </TextBox>

                    <!-- Email Label -->
                    <TextBlock Text="Email Address"
                               FontSize="12"
                               Margin="0,0,0,-10"/>

                    <!-- Email Box -->
                    <TextBox Height="32"
                             Text="a"
                            Background="White"
                             Foreground="Black"
                            BorderThickness="1"
                            CornerRadius="8"
                            FontSize="12">
                    </TextBox>

                    <!-- Address label-->
                    <TextBlock Text="Address"
                               FontSize="12"
                               Margin="0,0,0,-10"/>

                    <!-- Address box-->
                    <TextBox Height="32"
                             Text="a"
                            Background="White"
                             Foreground="Black"
                            BorderThickness="1"
                            CornerRadius="8"
                            FontSize="12">
                    </TextBox>
                </StackPanel>

                <!-- SAVE BUTTON -->
                <Grid Grid.Row="3"
                        Margin="20, 20, 20, 0"
                        VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                        Content="Edit"
                        Height="48"
                        Width="165"
                        Background="#F83758"
                        Foreground="White"
                        FontSize="15"
                        FontWeight="SemiBold"
                        CornerRadius="8"/>
                    <Button Grid.Column="2"
                        Content="Save"
                        Height="48"
                        Width="165"
                        Background="#F83758"
                        Foreground="White"
                        FontSize="15"
                        FontWeight="SemiBold"
                        CornerRadius="8"/>
                </Grid>
            </Grid>
        </ScrollViewer>

        <Grid Grid.Row="1"
              x:Name="BottomNavBar" 
              Height="60" 
              VerticalAlignment="Bottom"
              Background="White"
              BorderBrush="#E0E0E0" 
              BorderThickness="0,1,0,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Style="{StaticResource BottomBarItemStyle}"
                    Command="{Binding NavigateToProductListCommand}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE80F;" FontFamily="Segoe MDL2 Assets" 
                              FontSize="22" Margin="0,0,0,3" Foreground="{StaticResource InactiveBrush}"/>
                    <TextBlock Text="Home" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource InactiveBrush}"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="1" 
                    Style="{StaticResource BottomBarItemStyle}"
                    Command="{Binding NavigateToCartCommand}"
                    Padding="15,0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE7BF;" FontFamily="Segoe MDL2 Assets" 
                              FontSize="22" Margin="0,0,0,3" Foreground="{StaticResource InactiveBrush}"/>
                    <TextBlock Text="Cart" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource InactiveBrush}"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="2" 
                    Style="{StaticResource BottomBarItemStyle}"
                    Command="{Binding NavigateToProfileCommand}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE77B;" FontFamily="Segoe MDL2 Assets" 
                              FontSize="22" Margin="0,0,0,3" Foreground="{StaticResource ActiveBrush}"/>
                    <TextBlock Text="Account" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource ActiveBrush}"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
